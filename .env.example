# Database
DATABASE_URL="postgresql://user:password@localhost:5432/swimmingly"

# Redis
REDIS_URL="redis://localhost:6379"

# Mapbox
MAPBOX_PUBLIC_KEY="pk.your_public_key_here"
MAPBOX_SECRET_KEY="sk.your_secret_key_here"

# Aquatic Park Location
NEXT_PUBLIC_AQUATIC_PARK_LAT="37.8065"
NEXT_PUBLIC_AQUATIC_PARK_LON="-122.4216"

# NOAA (usually no API key required, but some endpoints may need it)
NOAA_API_KEY=""

# Open-Meteo (no API key required)
# Used for enhanced wind data - completely free for non-commercial use
# Docs: https://open-meteo.com/en/docs

# San Francisco Open Data (optional - for SSO events)
# NOTE: SSO dataset ID may need updating - check https://data.sfgov.org
# Current dataset attempts: pr5w-eger, ssi8-333r
# App continues to function without SSO data

# Cron Secret (for securing cron endpoints)
CRON_SECRET="your-random-secret-here"

# Optional: Monitoring
SENTRY_DSN=""
NEXT_PUBLIC_ANALYTICS_ID=""

# Static Site Update Scheduler (runs alongside dev server)
# Controls automatic updates to GitHub Pages during development
ENABLE_STATIC_UPDATES="true"                              # Set to "false" to disable
STATIC_UPDATE_SCHEDULE="*/10 * * * *"                     # Schedule expression (default: every 10 minutes)
API_URL="http://localhost:3000/api/conditions"            # Local API endpoint
GITHUB_REPO="git@github.com:YOUR_USERNAME/swimmingly.git" # Your GitHub repo
GITHUB_BRANCH="gh-pages"                                  # Branch for GitHub Pages
RUN_IMMEDIATELY="false"                                   # Run update on scheduler start
